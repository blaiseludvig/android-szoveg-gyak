<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/ediText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Írj ide!"
        android:textAlignment="center"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnUpper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ediText"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textSize="25sp"
        android:text="nagybetű"/>

    <Button
        android:id="@+id/btnLower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnUpper"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textSize="25sp"
        android:text="kisbetű"/>

    <Button
        android:id="@+id/btnRandom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLower"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textSize="25sp"
        android:text="random szín"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRandom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="7.5dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"/>

</RelativeLayout>